extends ./layout.jade

block title
  title Add Article

block content
    h1 Neuer Artikel

    form(method="post")

        fieldset
            label(for="title").
                Titel:
            br
            input(id="title", name="title", type="text", size="80", maxlength="300")
        fieldset
            label(for="state").
                Status:
            br
            select(id="state", name="state")
              option Entwurff
