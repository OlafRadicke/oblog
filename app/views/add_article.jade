              option Papierkorb

        fieldset
            label(for="teaser").
                Anrisstext:
            br
            textarea(id="teaser", name="teaser", cols="80", rows="3")

        fieldset
            label(for="body").
                Text:
            br
            textarea(id="body", name="body", cols="80", rows="20")
            br

