//- index.jade
extends ./layout.jade

block title
  title Login

block content
    h1 Login

    if flash_message_error != ""
        #flash_message_error
            h2 Fehler!
            p #{flash_message_error}

    if flash_message != ""
        #flash_message_error
            h2 Info
            p #{flash_message}

    form(method="post")

        fieldset
            label(for="name").
                Name:
            br
            input(id="name", name="name", type="text", size="40", maxlength="300")
            br
            label(for="password").
                Passwort:
            br
            input(id="password", name="password", type="password", size="40", maxlength="300")


        button(id="bt_save", class="btn", data-action="save").
            Login
